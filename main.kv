<EditingWindow>:
    name:'Editing'
    MDBoxLayout:
        md_bg_color:17/255, 0/255, 255/255, 1
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Start'

<SettingsWindow>:
    name:'Settings'
    MDBoxLayout:
        md_bg_color:255/255, 0/255, 212/255, 1
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Start'

<ItemWindow>:
    name: 'Item'
